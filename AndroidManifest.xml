<?xml version="1.0" encoding="utf-8"?>
<manifest android:installLocation="preferExternal"
    package="com.mms.mes"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CALL_PHONE" >
    </uses-permission>
<uses-sdk android:minSdkVersion="4"/>
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true">
    </supports-screens>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:icon="@drawable/mihir_icon"
        android:label="@string/app_name"
        android:name=".app.MihirApp"
       android:theme="@android:style/Theme.Black.NoTitleBar">
        <activity
            android:name=".app.AttendenceActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.ImpContactsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:launchMode="singleTop"
            android:name=".app.HomeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".app.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
        </activity>
        <activity
            android:name=".app.MyAccountActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="app.NotificationActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.RegisterActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.AntiraggingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".app.Canteenactivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.NotificationsDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.SplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.ParentActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.FindCanteenActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.MarksActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
        </activity>
        <activity
            android:name=".app.AssignmentsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.AssignmentDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.MarksActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".app.EventsActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>