<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/action_bar" >
    </include>

    <TextView
        android:id="@+id/action_bar_tv_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:text="Student Name"
        android:textColor="#ffff00"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/action_bar_tv_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Class"
            android:textColor="#ffff00"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/action_bar_tv_section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Section"
            android:textColor="#ffff00"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/heading_bg"
        android:gravity="center"
        android:text="MY ACCOUNT"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
     
        android:background="@drawable/bg_shadow" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/book_bg_transparency" >

            <TextView
                android:id="@+id/myacc_label_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name :"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaccount_tv_mmsid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXX"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" android:layout_toRightOf="@id/myacc_label_username" android:paddingLeft="10dip"/>

            <TextView
                android:id="@+id/myaccount_label_logouttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myacc_label_username"
                android:paddingTop="10sp"
                android:text="Logout Time :"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/myaccount_layout_spinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myaccount_label_logouttime" >

                <Spinner
                    android:id="@+id/myaccount_spinner_logouttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myaccount_label_logouttime" />

                <Spinner
                    android:id="@+id/number_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myaccount_label_logouttime"
                    android:layout_toRightOf="@id/myaccount_spinner_logouttime" />

            </RelativeLayout>

            <Button
                android:id="@+id/myaccount_btn_changepwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myaccount_layout_spinners"
                android:background="@drawable/btn_default_1"
                android:text="Change Password"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/myaccount_btn_signout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/myaccount_btn_changepwd"
                android:layout_below="@id/myaccount_layout_spinners"
                android:background="@drawable/btn_default_1"
                android:text="Signout"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="30px"
            layout="@layout/mms_ad" />
    </LinearLayout>

</LinearLayout>