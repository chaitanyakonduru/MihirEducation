<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <include
        android:id="@+id/home_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/action_bar" >
    </include>

    <com.mms.mes.custom.DashboardLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" android:layout_weight="1">

        <TextView
            android:id="@+id/home_btn_marks"
            style="@style/DashboardTabButtonStyle"
            android:drawableTop="@drawable/home_marks"
            android:textSize="30sp"
            android:text="@string/home_marks"/>

        <TextView
            android:id="@+id/home_btn_attendance"
            style="@style/DashboardTabButtonStyle"
            android:drawableTop="@drawable/home_attendance"
            android:textSize="30sp"
            android:text="@string/home_attendance" />

        <TextView
            android:id="@+id/home_btn_notifications"
            style="@style/DashboardTabButtonStyle"
            android:drawableTop="@drawable/home_events"
            android:textSize="30sp"
            android:text="@string/home_notifi_evetns" />

        <TextView
            android:id="@+id/home_btn_assignment"
            style="@style/DashboardTabButtonStyle"
            android:textSize="30sp"
            android:drawableTop="@drawable/home_assignments"
            android:text="@string/home_Assignments" />

        <TextView
              android:textSize="30sp"
            android:id="@+id/home_btn_antiragging"
            style="@style/DashboardTabButtonStyle"
            android:drawableTop="@drawable/home_antiragging"
            android:text="@string/home_antiragging" />

        <TextView
            android:id="@+id/home_btn_canteen"
            style="@style/DashboardTabButtonStyle"
            android:drawableTop="@drawable/home_canteen"
              android:textSize="30sp"
            android:text="@string/home_canteen" />

        <TextView
            android:id="@+id/home_btn_myaccount"
            style="@style/DashboardTabButtonStyle"
            android:drawableTop="@drawable/home_myaccount"
            android:textSize="30sp"
            android:text="@string/home_myaccount" />

        <TextView
            android:id="@+id/home_btn_emergency"
            style="@style/DashboardTabButtonStyle"
              android:textSize="30sp"
            android:drawableTop="@drawable/home_imp"
            android:text="@string/home_emergency" />
    </com.mms.mes.custom.DashboardLayout>
<include  layout="@layout/mms_ad"/>
   </LinearLayout>